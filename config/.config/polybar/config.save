;==========================================================
; Polybar config - fully fixed and safe
;==========================================================

[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color1}
foreground = ${xrdb:color7}
foreground-alt = ${xrdb:color7}
primary = ${xrdb:color3}
secondary = ${xrdb:color4}
alert = ${xrdb:color2}
icon-network = ${xrdb:color6}
icon-cpu = ${xrdb:color5}
icon-memory = ${xrdb:color4}
icon-brightness = ${xrdb:color3}
icon-volume = ${xrdb:color2}
icon-keyboard = ${xrdb:color1}
icon-battery = ${xrdb:color6}
icon-time = ${xrdb:color5}
icon-date = ${xrdb:color4}

;==========================================================
[bar/example]
width = 98%
height = 27
offset-x = 1%
offset-y = 10
radius = 10
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00
border-size = 0
border-color = #000000

padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = Iosevka Nerd Font:size=10;2
font-1 = Iosevka Nerd Font:size=12;3
font-2 = siji:pixelsize=10;1
font-3 = "Font Awesome 5 Free:style=Solid:pixelsize=10;1"
font-4 = "Font Awesome 5 Brands:pixelsize=10;1"

modules-left = arch-logo i3 weather
modules-center = xwindow
modules-right = system system-center wlan network-speed battery time

tray-position = none
override-redirect = true
wm-restack = i3
cursor-click = pointer
cursor-scroll = ns-resize

;==========================================================
[module/arch-logo]
type = custom/text
format = <label>
label = 
label-foreground = ${colors.primary}
label-font = 2
click-left = ~/.config/rofi/powermenu/type-5/powermenu.sh

[module/weather]
type = custom/script
exec = ~/.config/polybar/scripts/weather.sh
tail = false
interval = 960
exec-if-exists = ~/.config/polybar/scripts/weather.sh

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = true
strip-wsnumbers = true
show-urgent = true
label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}
label-focused = ●
label-focused-foreground = ${colors.primary}
label-unfocused = ●
label-unfocused-foreground = ${colors.foreground}
label-visible = ●
label-visible-foreground = ${colors.primary}
label-empty = ○
label-empty-foreground = ${colors.foreground-alt}
label-urgent = ●
label-urgent-foreground = ${colors.alert}

[module/xwindow]
type = custom/script
exec = ~/.config/polybar/scripts/xwindow-clickable.sh
interval = 1
exec-if-exists = ~/.config/polybar/scripts/xwindow-clickable.sh
click-left = ~/.config/polybar/scripts/toggle-monitor.sh left
label = %output%
label-maxlen = 50
label-foreground = ${colors.foreground}
label-empty = Desktop
label-empty-foreground = ${colors.foreground-alt}

[module/network-speed]
type = internal/network
interface = wlo1
acquire_ip = true
interval = 1
format-connected = <label-connected>
format-connected-prefix-foreground = ${colors.icon-network}
format-connected-prefix-font = 2
label-connected = ↓%downspeed% ↑%upspeed%

[module/wlan]
type = internal/network
interface = wlo1
acquire_ip = true
interval = 3
format-connected = <ramp-signal>
label-connected = %essid% %signal%%
ramp-signal-0 = 󰤯
ramp-signal-1 = 󰤟
ramp-signal-2 = 󰤢
ramp-signal-3 = 󰤥
ramp-signal-4 = 󰤨
ramp-signal-foreground = ${colors.icon-network}
ramp-signal-font = 2

[module/cpu-usage]
type = internal/cpu
interval = 2
format = <label>
format-prefix = "  "
format-prefix-foreground = ${colors.icon-cpu}
label = %percentage%%

[module/cpu-temp]
type = internal/temperature
interval = 2
thermal-zone = 0
hwmon-path = /sys/class/hwmon/hwmon3/temp2_input
warn-temperature = 80
format = <ramp> <label>
format-warn = <ramp> <label-warn>
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.alert}
ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.icon-cpu}
ramp-font = 2

[module/memory-usage]
type = internal/memory
interval = 2
format = <label>
format-prefix = "%{T4}%{T-} "
format-prefix-foreground = ${colors.icon-memory}
label = %gb_used%

[module/time]
type = custom/script
exec = date +'%H:%M'
interval = 5
format = <label>
label-font = 1
format-prefix = "  "
format-prefix-foreground = ${colors.icon-time}
click-left = ~/.config/eww/scripts/toggle_calendar.sh
exec-if-exists = ~/.config/eww/scripts/toggle_calendar.sh

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98
format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>
format-full-prefix = " "
format-full-prefix-foreground = ${colors.icon-battery}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.icon-battery}
animation-charging-0 = 
animation-charging-1 = 
animation-charging-foreground = ${colors.icon-battery}
animation-charging-framerate = 750
animation-discharging-framerate = 750

[module/pulseaudio]
type = internal/pulseaudio
format-volume = <ramp-volume>
label-volume = %percentage%%
label-muted =  %percentage%%
label-muted-foreground = ${colors.alert}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.icon-volume}

;==========================================================
[settings]
screenchange-reload = true
